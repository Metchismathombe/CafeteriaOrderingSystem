
@{
    ViewData["Title"] = "Home";
}

<!-- Main Image Banner -->
<div class="jumbotron jumbotron-fluid text-white" style="background: url('/images/image(cover)') center center / cover no-repeat; height: 80vh; position: relative;">
    <div class="container h-100 d-flex flex-column justify-content-center align-items-start" style="background-color: rgba(0,0,0,0.5);">
        <h1 class="display-4 fw-bold">Welcome to Our Internal Cafeteria Ordering System</h1>
        <p class="lead">Order your meals quickly, manage deposits, and enjoy seamless service within your company.</p>
        <a class="btn btn-success btn-lg mt-3" asp-controller="Order" asp-action="Restaurants">Start Ordering</a>
    </div>
</div>

<!-- How it Works Section -->
<div class="container mt-5">
    <h2 class="text-center mb-4">How It Works</h2>

    <div class="row mb-4">
        <div class="col-md-6">
            <img src="/images/order.webp" alt="Order Food" class="img-fluid rounded shadow" />
        </div>
        <div class="col-md-6 d-flex align-items-center">
            <div>
                <h4>1. Browse & Order</h4>
                <p>Choose from a variety of meals from different in-house restaurants. Place your order with just a few clicks.</p>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 d-flex align-items-center">
            <div>
                <h4>2. Deposit Balance</h4>
                <p>Easily deposit funds into your account. Earn bonus credits when you deposit more.</p>
            </div>
        </div>
        <div class="col-md-6">
            <img src="/images/deposit.webp" alt="Deposit" class="img-fluid rounded shadow" />
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <img src="/images/delivery.jpg" alt="Fast Service" class="img-fluid rounded shadow" />
        </div>
        <div class="col-md-6 d-flex align-items-center">
            <div>
                <h4>3. Quick Delivery</h4>
                <p>Receive your meals without delays. We ensure prompt service within your premises.</p>
            </div>
        </div>
    </div>
</div>



<!-- Bootstrap and Smooth Scrollbar -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
        });
    </script>
}

<!-- Optional: Custom Scrollbar -->
<style>
    ::-webkit-scrollbar {
        width: 10px;
    }

    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 5px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
</style>
