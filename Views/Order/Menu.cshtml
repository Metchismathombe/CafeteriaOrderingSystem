@model Restaurant

<h2>@Model.Name Menu</h2>

<form asp-action="PlaceOrder" method="post">
    <input type="hidden" name="restaurantId" value="@Model.Id" />

    @foreach (var item in Model.MenuItems)
    {
        <div class="border p-2 mb-2">
            <strong>@item.Name</strong> - R @item.Price <br />
            <small>@item.Description</small>
            <div class="form-group mt-2">
                <label>Quantity</label>
                <input type="number" name="quantities[@item.Id]" value="0" min="0" class="form-control" />
            </div>
        </div>
    }

    <div class="form-group mt-3">
        <label>Employee Number</label>
        <input type="text" name="employeeNumber" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Place Order</button>
</form>
