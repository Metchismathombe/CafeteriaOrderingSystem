@model IEnumerable<Order>

<h2>My Orders</h2>

@foreach (var order in Model)
{
    <div class="card p-2 my-2">
        <p><strong>Date:</strong> @order.OrderDate | <strong>Status:</strong> @order.Status</p>
        <ul>
            @foreach (var item in order.OrderItems)
            {
                <li>@item.MenuItem.Name - @item.Quantity x R@item.UnitPriceAtTimeOfOrder</li>
            }
        </ul>
        <p><strong>Total:</strong> R @order.TotalAmount</p>
    </div>
}
