@model IEnumerable<Restaurant>

<h2>Select a Restaurant</h2>

@foreach (var r in Model)
{
    <div class="card my-3 p-3">
        <h4>@r.Name</h4>
        <p>@r.LocationDescription</p>
        @if (!string.IsNullOrEmpty(r.ImageUrl))
        {
            <img src="@r.ImageUrl" alt="@r.Name" style="max-width: 100%; height: auto;" />
        }
        <a class="btn btn-success mt-2" asp-action="Menu" asp-route-id="@r.Id">View Menu</a>
    </div>
}
