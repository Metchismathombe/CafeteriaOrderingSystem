@{
    ViewData["Title"] = "Make a Deposit";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-sm p-4" style="max-width: 400px; width: 100%;">
        <h2 class="mb-4 text-center fw-bold">Make a Deposit</h2>

        <form asp-action="Index" method="post" novalidate>
            <div class="mb-3">
                <label for="employeeNumber" class="form-label">Employee Number</label>
                <input type="text" id="employeeNumber" name="employeeNumber" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="depositAmount" class="form-label">Deposit Amount (R)</label>
                <input type="number" id="depositAmount" name="depositAmount" step="0.01" min="0" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success mt-3" role="alert">
                @ViewBag.Message
            </div>
        }
    </div>
</div>
